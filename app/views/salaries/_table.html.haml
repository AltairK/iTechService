- if @salaries.any?

  %table.table.table-striped.table-hover
    %thead
      %tr
        %th= t 'attributes.created_at'
        %th= Salary.human_attribute_name :issued_at
        %th= t 'attributes.user'
        %th= Salary.human_attribute_name :amount
        %th
    %tbody
      - @salaries.each do |salary|
        %tr
          %td= link_to human_datetime(salary.created_at), salary_path(salary)
          %td= link_to human_datetime(salary.issued_at), salary_path(salary)
          %td= link_to salary.user.short_name, user_path(salary.user)
          %td= salary.amount
          %td
            .btn-group
              = link_to_comments_for salary, class: 'btn'
              = link_to_show_small salary
              = link_to_edit_small salary
              = link_to_destroy_small salary

- else
  = render 'shared/empty'
