- if @locations.any?
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th= Location.human_attribute_name(:id)
        %th= Location.human_attribute_name(:name)
        %th= Location.human_attribute_name(:ancestry)
        %th= Location.human_attribute_name(:created_at)
        %th
    %tbody
      - @locations.each do |location|
        %tr
          %td= location.id
          %td= location.name
          %td= location.ancestors_names
          %td= human_datetime location.created_at
          %td
            .btn-group
              = link_to_edit_small location
              = link_to_destroy_small location

- else
  = render 'shared/empty'