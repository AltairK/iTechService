= simple_form_for @task, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :duration
  = f.input :cost
  = f.input :priority
  .form-actions
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tasks_path, :class => 'btn'
    = f.button :submit, :class => 'btn-primary'
