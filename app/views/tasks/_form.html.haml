= simple_form_for @task, html: { class: 'form-horizontal' } do |f|
  = f.association :product, collection: service_products_collection
  = f.input :name
  = f.input :role, collection: User::ROLES_FOR_ADMIN, value_method: :to_s, label_method: lambda{|role|t("users.roles.#{role}")}
  = f.association :location, collection: locations_collection
  = f.input :cost
  .form-actions
    = submit_button f
