.page-header
  %h1= t 'data_sync.title'

= simple_form_for :data_sync, url: data_sync_path, method: :post, html: {class: 'form-horizontal'} do |f|

  .form-fields
    -#= f.input :remote_dep_code, collection: data_sync_branches_collection, required: false
    = f.input :remote_dep_code, required: false
    = f.input :action, collection: data_sync_actions_collection, required: false
    = f.input :mode, collection: data_sync_modes_collection, required: false
    = f.input :model_names, collection: data_sync_models_collection, as: :check_boxes, required: false

  .form-actions
    = f.submit t('data_sync.submit'), class: 'btn btn-primary'