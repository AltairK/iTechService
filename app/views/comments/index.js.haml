:plain
  $target = $(".comments_link[href='#{request.fullpath}']");
  if($target.next('.popover').length > 0){
    $target.popover('destroy');
  }else{
    $('.comments_link').popover('destroy');
    content = "<div class='popover_comments'>#{j(render(@comments))}</div>" + "#{j(new_comment_form_for(@commentable))}";
    $target.popover({
      html: true,
      placement: 'right',
      trigger: 'manual',
      content: content,
    });
    $target.popover('show');
  }
