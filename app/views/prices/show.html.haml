- model_class = Price
.page-header
  %h1= t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:file) + ':'
  %br
  = @price.file

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), prices_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_price_path(@price), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), price_path(@price), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
