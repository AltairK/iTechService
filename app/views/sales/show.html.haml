- model_class = Sale
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:device_type_id) + ':'
  %br
  = @sale.device_type_id
%p
  %strong= model_class.human_attribute_name(:imei) + ':'
  %br
  = @sale.imei
%p
  %strong= model_class.human_attribute_name(:serial_number) + ':'
  %br
  = @sale.serial_number
%p
  %strong= model_class.human_attribute_name(:sold_at) + ':'
  %br
  = @sale.sold_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), sold_devices_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_sold_device_path(@sale), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), sold_device_path(@sale), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
