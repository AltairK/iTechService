- if params[:form_name] == 'payments/modal_index'
  :plain
    hideModal();
- if @sale.errors.empty?
  :plain
    $('#sale_form_content').replaceWith("#{j(render('sales/form_content'))}");
    $('#sale_left_panel').replaceWith("#{j(render('sales/form_left_panel'))}");
    $('#sale_bottom_row').replaceWith("#{j(render('sales/form_bottom_panel'))}");
- else
  :plain
    $('#flash_place').html("#{j(bootstrap_flash)}");