%tr.spare_part_fields.fields{data: {product: f.object.product_id}}
  %td.item
    = link_to f.object.name, f.object.product
    = f.hidden_field :product_id
  %td.quantity
    = f.input_field :quantity, class: 'input-mini', min: 1
    = f.error :quantity
  %td.warranty
    = f.input_field :warranty_term, class: 'input-mini', min: 0
    = f.error :warranty_term
  %td.cost= f.object.purchase_price.present? ? human_currency(f.object.purchase_price, false) : '-'
  %td.action= link_to_remove_fields f