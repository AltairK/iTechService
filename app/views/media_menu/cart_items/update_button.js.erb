var card = document.getElementById("media_menu-item_<%= item_id %>");
if (card !== null) {
  var button_container = card.getElementsByClassName('selection_button_container')[0];
  button_container.innerHTML = '<%= button_content %>';
}

var cart_item = document.getElementById("media_menu-cart_item_<%= params[:id] %>");
if (cart_item !== null) {
  cart_item.parentNode.removeChild(cart_item);
}

$('#media_menu-item').modal('hide')
