- if can? :manage, StolenPhone
  = auto_header_tag
- else
  .page-header
    %h1= autotitle

.table_filter.navbar.container
  .navbar-inner
    = form_tag stolen_phones_path, method: 'get', id: 'search_form', class: 'navbar-search form-search', remote: true do
      .input-append
        = text_field_tag :imei_q, params[:imei_q], id: 'search_stolen_phone_input', class: 'search-query input-medium',
            placeholder: 'IMEI'
        %span.add-on.btn.clear_search_input
          %i.icon-remove

#resource_table= render 'table'
