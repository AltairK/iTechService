- model_class = DeviceType
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @device_type.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), device_types_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_device_type_path(@device_type), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), device_type_path(@device_type), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
