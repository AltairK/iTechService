- model_class = DeviceType
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @device_types.each do |device_type|
      %tr
        %td= link_to device_type.id, device_type_path(device_type)
        %td= device_type.name
        %td=l device_type.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_device_type_path(device_type), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), device_type_path(device_type), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_device_type_path, :class => 'btn btn-primary'
