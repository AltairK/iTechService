#modal_form.modal.fade.hide
  = form_tag select_products_path, remote: true, id: 'product_choose_form', form: @form do
    .modal-header
      %h3= t 'products.shoose.title'

    .modal-body
      = hidden_field_tag 'product_id', nil, id: 'selected_product', disabled: true
      = hidden_field_tag 'item_id', nil, id: 'selected_item', disabled: true

      .row-fluid
        .span4
          #product_groups= product_groups_trees_tag @product_groups, @opened_product_groups, @current_product_group_id, choose: true, form: @form

        .span8
          .input-append
            = text_field_tag :q, nil, id: 'item_search_field', class: 'search-query', placeholder: ''
            = link_to glyph(:remove), '#', class: 'btn clear_search_field'

          #resource_table= render 'small_table'

      .row-fluid#product_items
        -#%hr
        -#.input-append
        -#  = text_field_tag :q, nil, id: 'item_search_field', class: 'search-query', placeholder: ''
        -#  = link_to glyph(:remove), '#', id: 'clear_item_search_field', class: 'btn clear_search_field'
        #product_items_table

    .modal-footer
      = link_to t('close'), '#', class: 'btn', 'data-dismiss' => 'modal'
      - if @form == 'purchase'
        = submit_tag t('products.choose.submit'), class: 'btn btn-primary', id: 'submit_product_button', disabled: true
