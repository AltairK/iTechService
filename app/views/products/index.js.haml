:plain
  $("#resource_table").html("#{j(render('table'))}");
- if @current_product_group_id.present?
  :plain
    $('#new_product_link').removeAttr('disabled');
    $('#new_product_link').attr('href', "#{new_product_path(product: {product_group_id: @current_product_group_id})}");
- else
  :plain
    $('#new_product_link').attr('disabled', true);
    $('#new_product_link').attr('href', '#');
-#$('#new_product_group_link').attr('href', "#{new_product_group_path(product_group: {parent_id: @current_product_group_id})}");
