= auto_header_tag

.table_filter.navbar.container
  .navbar-inner
    = form_tag products_path, method: 'get', id: 'search_form', class: 'navbar-search form-search', remote: true do
      .input-append
        = text_field_tag :product_q, params[:product_q], id: 'search_product_input', class: 'search-query input-medium', placeholder: ''
        %span.add-on.btn.clear_search_input
          %i.icon-remove

