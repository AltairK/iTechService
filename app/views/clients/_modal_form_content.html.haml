= simple_form_for @client, html: { class: 'form-horizontal', remote: true } do |f|
  .modal-header
    %a.close{'data-dismiss' => 'modal', href: '#'}
      %i.icon-remove-sign
    %h3= t "client.#{params[:action]}"
  
  .modal-body
    = render 'fields', f: f
  
  .modal-footer
    = f.button :submit, class: 'btn-primary'
