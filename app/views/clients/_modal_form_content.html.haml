= simple_form_for @client, html: { id: 'client_form', class: 'form-horizontal', remote: true } do |f|
  .modal-header
    %a.close#close_client_form_button{href: '#'}
      %i.icon-remove-sign
    %h3= auto_title

  .form-body
    = f.input :name, autofocus: true
    = f.input :surname
    = f.input :patronymic
    = f.input :full_phone_number, as: :phone_number
    = f.hidden_field :phone_number
    = f.input :contact_phone
    = f.input :card_number

    #client_questionnaire_input.hidden
      = f.input :email
      = f.input :birthday, as: :my_date, viewmode: 'years'
      .control-group
        %label.control-label= t 'clients.questionnaire'
        .controls= link_to icon_tag('print'), '#', class: 'btn', id: 'questionnaire_link', target: '_blank'

  .modal-footer
    = submit_button f
