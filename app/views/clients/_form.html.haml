= simple_form_for @client, html: { class: 'form-horizontal' } do |f|

  = f.input :name, autofocus: true
  = f.input :surname
  = f.input :patronymic
  = f.input :birthday, as: :my_date, viewmode: 'years'
  = f.input :full_phone_number, as: :phone_number
  = f.hidden_field :phone_number
  = f.input :contact_phone
  = f.input :email
  = f.input :card_number
  = f.input :admin_info if current_user.admin?
  = f.input :comment, as: 'text'

  .control-group
    %label.control-label= t Client.human_attribute_name(:comments)
    .controls= render @client.comments

  .form-actions
    = submit_button f
