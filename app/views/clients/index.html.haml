= auto_header_tag

.table_filter.navbar.container
  .navbar-inner
    = form_tag clients_path, method: 'get', id: 'search_form', class: 'navbar-search form-search', remote: true do
      .input-append
        = text_field_tag :client_q, params[:client_q], id: 'search_client_input', class: 'search-query input-medium',
            placeholder: t('.seach_placeholder')
        %span.add-on.btn.clear_search_input
          %i.icon-remove

#resource_table= render 'table'