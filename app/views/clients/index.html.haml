.page-header
  %h1=t '.title', :default => Client.model_name.human.pluralize
  = link_to t('.new', :default => t("helpers.links.new")), new_client_path, :class => 'btn btn-primary'

.table_filter.navbar.container
  .navbar-inner
    = form_tag devices_path, method: 'get', id: 'search_devices_form', class: 'navbar-search form-search', remote: true do
      .input-prepend
        %span.add-on.btn.disabled
          %i.icon-search
        = text_field_tag :client, params[:client], id: 'search_client_input', class: 'search-query input-medium',
            placeholder: 'name or phone'

#resource_table= render 'table'