.page-header
  %h1=t '.title', :default => Client.model_name.human.pluralize
  = link_to t('.new', :default => t("helpers.links.new")), new_client_path, :class => 'btn btn-primary'

.table_filter.navbar.container
  .navbar-inner
    = form_tag clients_path, method: 'get', id: 'search_form', class: 'navbar-search form-search', remote: true do
      .input-append
        = text_field_tag :client, params[:client_q], id: 'search_client_input', class: 'search-query input-medium',
            placeholder: 'name or phone'
        %span.add-on.btn.clear_search_input
          %i.icon-remove

#resource_table= render 'table'