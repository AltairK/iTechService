- if @karma.new_record?
  == $owner = $("#new_#{@karma.good ? 'good' : 'bad'}_karma_for_#{@karma.user_id}");
- else
  == $owner = $("#user_karma_#{@karma.id}");
:plain
  close_karma_popovers();
  $owner.popover({
    html: true,
    placement: 'top',
    title: "<a href='#' class='close_karma_popover_button close_popover_button' data-owner="+$owner.selector+">&times;<\/a>",
    content: "#{j(render('form'))}",
    container: '#karma_popover_container'
  });
  $owner.popover('show');
  $('#karma_comment').focus();