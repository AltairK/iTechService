:plain
  $karma = $("#karma_#{@karma.id}");
  $karma.tooltip('destroy').popover('destroy').remove();
  karma_group_selector = "#karma_group_#{@karma_group.id}";
  $(karma_group_selector).replaceWith("#{j(render(@karma_group))}");
  bindKarmaGroupEvents(karma_group_selector);

- if @old_karma_group.present?
  :plain
    old_karma_group_selector = "#karma_group_#{@old_karma_group.id}";
    $old_karma_group = $(old_karma_group_selector);
  - if @old_karma_group.karmas.any?
    :plain
      $old_karma_group.popover('hide');
      $old_karma_group.replaceWith("#{j(render(@old_karma_group))}");
      bindKarmaGroupEvents(old_karma_group_selector);
  - else
    == $old_karma_group.popover('destroy').remove();