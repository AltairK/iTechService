- if @karma.new_record?
  == $owner = $("#new_#{@karma.good ? 'good' : 'bad'}_karma_for_#{@karma.user_id}");
- else
  == $owner = $("#karma_#{@karma.id}");
:plain
  closeKarmaPopovers();
  $owner.popover({
    html: true,
    placement: 'top',
    title: "<a href='#' class='close_karma_popover_button close_popover_button' data-owner="+$owner.selector+">&times;<\/a>#{@karma.user_presentation}#{@karma.new_record? ? '' : " [#{l @karma.created_at, format: :date_short}]"}",
    content: "#{j(render('form'))}",
    container: '#karma_popover_container'
  });
  $owner.popover('show');
  $('#karma_comment').focus();