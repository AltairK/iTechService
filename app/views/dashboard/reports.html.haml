#reports_filter.navbar.container
  .navbar-inner
    = form_tag reports_path, method: :get, id: 'search_form', class: 'navbar-search form-search' do
      = hidden_field_tag :report, params[:report]
      %button.btn.btn-info.btn-small
        %i.icon-filter
      = text_field_tag :start_date, @start_date.strftime('%d.%m.%Y'), class: 'datepicker input-small',
          data: {'date-language' => 'ru', 'date-format' => 'dd.mm.yyyy', 'date-weekstart' => 1}
      = '_'
      = text_field_tag :end_date, @end_date.strftime('%d.%m.%Y'), class: 'datepicker input-small',
          data: {'date-language' => 'ru', 'date-format' => 'dd.mm.yyyy', 'date-weekstart' => 1}

    %ul.nav
      %li.dropdown
        = link_to '#', id: 'selected_report', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do
          %span= t "reports.#{params[:report] || 'choose'}"
          %b.caret
        %ul#reports_select.dropdown-menu
          %li= link_to t('reports.device_types_report'), '#', data: { report: 'device_types_report' }
          %li= link_to t('reports.users_report'), '#', data: { report: 'users_report' }
          %li= link_to t('reports.tasks_report'), '#', data: { report: 'tasks_report' }
          %li= link_to t('reports.clients_report'), '#', data: { report: 'clients_report' }
          %li= link_to t('reports.tasks_durations_report'), '#', data: { report: 'tasks_durations_report' }
          %li= link_to t('reports.sales_report'), '#', data: { report: 'sales_report' }
          %li= link_to t('reports.devices_movements_report'), '#', data: { report: 'devices_movements_report' }
          -#%li= link_to t('reports.done_orders_report'), '#', remote: true, data: {report: 'done_orders_report'}
          - if can? :manage, Salary
            %li= link_to t('reports.salary_report'), '#', data: { report: 'salary_report' }
          %li= link_to t('reports.supply_report'), '#', data: { report: 'supply_report' }
          %li= link_to t('reports.salary_report'), '#', data: { report: 'salary_report' }
          %li= link_to t('reports.few_remnants_goods'), '#', data: { report: 'few_remnants_goods' }
          %li= link_to t('reports.few_remnants_spare_parts'), '#', data: { report: 'few_remnants_spare_parts' }

#reports_tables= render "dashboard/reports/#{params[:report]}" if params[:report].present?
