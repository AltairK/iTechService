.page-header

  = link_to icon_tag('file-alt') + t('dashboard.new_info'), new_info_path, class: 'btn btn-success btn-large'
  = link_to icon_tag('mobile-phone') + t('dashboard.new_device'), new_device_path,
      class: 'btn btn-success btn-large'
  = link_to icon_tag(:user) + t('dashboard.new_user'), new_user_path, class: 'btn btn-success btn-large'

%h4
  %ul#dashboard_navigation.nav.nav-pills
    %li.dropdown.actual_tasks_nav.active
      = link_to '#', 'data-toggle' => 'dropdown' do
        = t('dashboard.actual_tasks')
        %span.devices_location= ". #{@location_name}" if @location_name.present?
        %b.caret
      %ul.dropdown-menu
        %li= link_to t('everewhere'), dashboard_path(tab: 'actual_tasks'), remote: true
        %li.divider
        - Location.find_each do |location|
          %li= link_to location.full_name, dashboard_path(tab: 'actual_tasks', location: location.id), remote: true
    %li.made_devices_nav= link_to t('dashboard.made_devices'), dashboard_path(tab: 'made_devices'), remote: true
    %li.goods_for_sale_nav= link_to t('dashboard.goods_for_sale'), dashboard_path(tab: 'goods_for_sale'), remote: true

- if @table_name == 'tasks_table'
  .table_filter.navbar.container
    .navbar-inner

      = form_tag dashboard_path(tab: 'actual_tasks'), method: 'get', id: 'search_form', class: 'navbar-search form-search', remote: true do

        .input-append
          = text_field_tag :device, params[:device_q], id: 'search_device_input', class: 'search-query input-medium',
              placeholder: t('devices.search_placeholder')
          %span.add-on.btn.clear_search_input
            %i.icon-remove

        .input-append
          = text_field_tag :client, params[:client], id: 'search_client_input', class: 'search-query input-medium',
              placeholder: t('clients.index.search_placeholder')
          %span.add-on.btn.clear_search_input
            %i.icon-remove

#dashboard_content= render @table_name
