= auto_header_tag @store
= simple_form_for @store, html: { class: 'form-horizontal' } do |f|
  = f.association :department
  = f.input :kind, collection: store_kinds_for_select
  = f.association :price_types, as: :check_boxes
  = f.input :name
  = f.input :code
  = f.input :hidden
  .form-actions
    = submit_button f
