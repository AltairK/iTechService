%tr.revaluation_fields.fields
  %td.num
  %td.code= f.object.try(:code)
  %td.product
    %strong= f.object.name
    = f.hidden_field :product_id
  %td.purchase_price.number= human_currency f.object.purchase_price, false
  %td.actual_price.number= human_currency f.object.retail_price, false
  %td.price.number= f.number_field :price, class: 'input-small', min: 0
  %td.action= link_to_remove_fields f
