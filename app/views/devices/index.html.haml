- model_class = Device
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
  = link_to t('.new', :default => t("helpers.links.new")), new_device_path, :class => 'btn btn-primary'
  
%table.table.table-striped.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:ticket_number)
      %th= model_class.human_attribute_name(:device_type_id)
      %th= model_class.human_attribute_name(:client_id)
      %th= model_class.human_attribute_name(:comment)
      %th= model_class.human_attribute_name(:created_at)
      %th= model_class.human_attribute_name :done_at
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @devices.each do |device|
      %tr{class: class_for_device(device)}
        %td= link_to device.id, device_path(device)
        %td= link_to device.ticket_number, device_path(device)
        %td= link_to device.type_name, device_path(device)
        %td= device.client.name_phone
        %td= device.comment
        %td= l device.created_at, format: :long_d
        %td= l device.done_at, format: :long_d if device.done?
        %td.btn-group
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_device_path(device), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), device_path(device), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
