= simple_form_for @device, :html => { :class => 'form-horizontal' } do |f|
  = f.input :device_type_id
  = f.input :ticket_number
  = f.input :client_id
  = f.input :comment
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), devices_path, :class => 'btn'
