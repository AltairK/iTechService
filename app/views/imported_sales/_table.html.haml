- if can?(:manage, ImportedSale) or params[:search].present?
  - model_class = ImportedSale
  = paginate @imported_sales
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th= model_class.human_attribute_name :id
        %th= model_class.human_attribute_name :device
        %th= model_class.human_attribute_name :value
        %th= model_class.human_attribute_name :quantity
        %th= model_class.human_attribute_name :sold_at
        %th= model_class.human_attribute_name :created_at
    %tbody
      - @imported_sales.each do |imported_sale|
        %tr
          %td= imported_sale.id
          %td
            = imported_sale.device_type_name
            %br
            = [imported_sale.serial_number, imported_sale.imei].join ' | '
          %td= human_currency imported_sale.value
          %td= imported_sale.quantity
          %td= human_datetime imported_sale.sold_at
          %td= human_datetime imported_sale.created_at