    = form_tag purchases_path, method: 'get', id: 'search_form', class: 'navbar-search form-search', remote: true do
      .input-append
        = text_field_tag :purchase_q, params[:purchase_q], id: 'search_purchase_input', class: 'search-query input-medium', placeholder: ''
