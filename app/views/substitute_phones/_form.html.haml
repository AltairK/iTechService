.row-fluid
  .span6
    = simple_form_for form, html: {class: 'form-horizontal'} do |f|
      - if form.errors.any?
        .alert.alert-error= form.errors.full_messages.join('. ')

      = f.association :department, as: :radio_buttons, collection: departments_for_select, item_wrapper_class: 'inline'
      = f.input :item, as: :device, required: true
      = f.input :condition

      .form-actions
        = submit_button f

  .span6= secondary_form_container