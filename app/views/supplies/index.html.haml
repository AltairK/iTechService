%h1 Listing supplies

%table
  %tr
    %th Supply report
    %th Supply category
    %th Name
    %th Quantity
    %th Cost
    %th
    %th
    %th

  - @supplies.each do |supply|
    %tr
      %td= supply.supply_report
      %td= supply.supply_category
      %td= supply.name
      %td= supply.quantity
      %td= supply.cost
      %td= link_to 'Show', supply
      %td= link_to 'Edit', edit_supply_path(supply)
      %td= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Supply', new_supply_path
